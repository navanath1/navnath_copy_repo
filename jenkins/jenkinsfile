def cpuInfo = sh('lscpu')
def memoryInfo = sh('free -h')
def systemInfo = sh('uname -a')
                    
pipeline {
    agent any
    stages {
        stage('Server Details') {
            steps {
                script{
                    echo "Retrieving CPU and Memory Information:"
                    echo "CPU Information:"
                    echo ${cpuInfo}

                    echo "Memory Information:"
                    echo ${memoryInfo}

                    echo "System Information:"
                    echo ${systemInfo}
               }
            }
        }
    }
}
