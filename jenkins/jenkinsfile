pipeline {
    agent any
    
    stages {
        stage('Server Details') {
            steps {
                sh '''
                    echo "Retrieving CPU and Memory Information from `hostname` by ${username}:"
                    echo "CPU Information:"
                    echo ${cpuInfo} : 
                    lscpu

                    echo "Memory Information:"
                    echo ${memoryInfo}
                    free -h

                    echo "System Information:"
                    echo ${systemInfo}
                    uname -a

                   '''
            }
        }
    }
}
