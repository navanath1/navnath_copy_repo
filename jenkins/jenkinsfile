def cpuInfo = 'lscpu'
def memoryInfo = 'free -h'
def systemInfo = 'uname -a'
                    
pipeline {
    agent any

    stages {
        stage('Server Details') {
            steps {
                sh '''
                    echo "Retrieving CPU and Memory Information:"
                    echo "CPU Information:"
                    echo ${cpuInfo} : 
                    lscpu

                    echo "Memory Information:"
                    echo ${memoryInfo}
                    free -h
                    echo "System Information:"
                    echo ${systemInfo}
                    uname -a
                   '''
            }
        }
    }
}
